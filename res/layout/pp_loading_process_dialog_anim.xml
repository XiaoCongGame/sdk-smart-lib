<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
     >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10.0dip"
        android:contentDescription="@string/pp_company_logo"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:src="@drawable/pp_loading_logo" />

    <ProgressBar
        android:id="@+id/pp_loading_process_dialog_progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:indeterminate="false"
        android:indeterminateDrawable="@anim/pp_loading" />

    <TextView
        android:id="@+id/pp_process_dialog_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30.0dip"
        android:text="@string/pp_start"
        android:textColor="@android:color/darker_gray" />

    <TextView
        android:id="@+id/pp_version_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="10.0dip"
        android:layout_marginBottom="10dp"
        android:text="@string/pp_version_number"
        android:textColor="@color/pp_title_bg" />

</LinearLayout>