<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/pp_OrderLayoutStyle" >

    <LinearLayout
        android:id="@+id/pp_successLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10.0dip"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/pp_imSuccess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/pp_success" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="7.0dip"
            android:text="交易成功！"
            android:textColor="@color/pp_not_code" />
    </LinearLayout>

    <TextView
        android:id="@+id/pp_tv_phone_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/pp_successLayout"
        android:layout_marginBottom="2.0dip"
        android:layout_marginTop="2.0dip"
        android:paddingLeft="5.0dip"
        android:text="手机号码:"
        android:textColor="@color/pp_phone"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/pp_tv_pay_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/pp_successLayout"
        android:layout_marginTop="2.0dip"
        android:paddingLeft="5.0dip"
        android:paddingRight="5dp"
        android:textColor="@color/pp_introduce"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/pp_line1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pp_tv_pay_phone"
        android:layout_marginTop="3.0dip"
        android:background="@drawable/pp_line"
        android:paddingLeft="5.0dip"
        android:paddingRight="5.0dip" />

    <TextView
        android:id="@+id/pp_tv_order_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/pp_line1"
        android:layout_marginBottom="2.0dip"
        android:layout_marginTop="2.0dip"
        android:paddingLeft="5.0dip"
        android:text="商品名称:"
        android:textColor="@color/pp_phone"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/pp_tv_pay_orderInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/pp_line1"
        android:layout_marginTop="2.0dip"
        android:paddingLeft="5.0dip"
        android:paddingRight="5dp"
        android:textColor="@color/pp_introduce"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/pp_line2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pp_tv_pay_orderInfo"
        android:layout_marginTop="3.0dip"
        android:background="@drawable/pp_line"
        android:paddingLeft="5.0dip"
        android:paddingRight="5.0dip"
        android:textColor="@color/pp_introduce" />

    <TextView
        android:id="@+id/pp_tv_amt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/pp_line2"
        android:layout_marginBottom="2.0dip"
        android:layout_marginTop="2.0dip"
        android:paddingLeft="5.0dip"
        android:text="支付金额:"
        android:textColor="@color/pp_phone"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/pp_tv_pay_orderAmt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/pp_line2"
        android:layout_marginBottom="2.0dip"
        android:layout_marginTop="2.0dip"
        android:paddingLeft="5.0dip"
        android:paddingRight="5dp"
        android:text="10.00元"
        android:textColor="@color/pp_money_red"
        android:textSize="16sp" />

</RelativeLayout>