<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/pay_title_height"
        android:background="@drawable/pay_title_bg" >

        <TextView
            android:id="@+id/xcsdk_pay_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/xcsdk_xczhifupingtai"
            android:textColor="@android:color/white"
            android:textSize="@dimen/pay_title_text_size" />

        <TextView
            android:id="@+id/xcsdk_pay_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="10dp"
            android:textColor="@android:color/white"
            android:textSize="@dimen/pay_title_text_size" />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/xcsdk_payment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#010d18" >
    </FrameLayout>

</LinearLayout>