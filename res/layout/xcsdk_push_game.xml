<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/xcsdk_black_bg_big" >

    <ImageView
        android:id="@+id/xcsdk_push_game_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="30dp"
        android:scaleType="fitCenter"
        tools:ignore="ContentDescription" />

    <Button android:id="@+id/xcsdk_push_game_download_btn"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:layout_alignBottom="@id/xcsdk_push_game_image"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:alpha="0.7"
        android:background="@drawable/xcsdk_blue_btn"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:onClick="downloadGame"
        android:text="@string/xcsdk_click_download"
        android:textColor="@android:color/white"
        android:textSize="40sp" />

</RelativeLayout>