<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="dialog_title">
        <item name="android:background">#021e29</item>
        <item name="android:textSize">30sp</item>
        <item name="android:gravity">center</item>
    </style>
    
    <style name="xcsdk_dialog" parent="@android:style/Theme.Holo.Dialog">
        <item name="android:windowTitleStyle">@style/dialog_title</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:background">#021e29</item>
        <item name="android:width">500dp</item>
    </style>

    <style name="xcsdk_editview">
        <item name="android:textSize">@dimen/xcsdk_dialog_edit_text_size</item>
        <item name="android:background">@drawable/xcsdk_edit_text_bg</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textColorHint">#EEE</item>
        <item name="android:textColorHighlight">#FFF</item>
    </style>

    <style name="xcsdk_btn">
        <item name="android:background">@drawable/xcsdk_btn_bg</item>
        <item name="android:textSize">@dimen/xcsdk_dialog_btn_size</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textColorHighlight">#FFF</item>
    </style>

</resources>